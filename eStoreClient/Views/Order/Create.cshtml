@{
	var members = ViewData["Members"] as SelectList;
}
@model BusinessObject.Models.Order

<h2>Add Order</h2>

@using (Html.BeginForm("Create", "Order", FormMethod.Post))
{
	<div class="form-group">
		<label for="MemberId">Member:</label>
		@Html.DropDownListFor(model => model.MemberId, members, "Select a member", new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.MemberId)
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.OrderDate)
		@Html.TextBoxFor(model => model.OrderDate, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.OrderDate)
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.RequireDate)
		@Html.TextBoxFor(model => model.RequireDate, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.RequireDate)
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.ShippedDate)
		@Html.TextBoxFor(model => model.ShippedDate, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.ShippedDate)
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Freight)
		@Html.TextBoxFor(model => model.Freight, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.Freight)
	</div>

	<div class="form-group">
		<input type="submit" style="margin-top:10px" value="Add" class="btn btn-primary" />
	</div>
}
<div class="form-group">
	<a href="/Order/Index" style="background-color:gray;margin-top:10px" class="btn btn-primary">Back</a>
</div>
